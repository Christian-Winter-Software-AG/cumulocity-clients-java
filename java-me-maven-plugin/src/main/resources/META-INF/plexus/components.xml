<component-set>
    <components>
        <component>
            <role-hint>micro-edition</role-hint>
            <role>org.apache.maven.lifecycle.mapping.LifecycleMapping</role>
            <implementation>org.apache.maven.lifecycle.mapping.DefaultLifecycleMapping</implementation>
            <configuration>
                <id>micro-edition</id>
                <phases>
                    <initialize>
                        com.cumulocity.me:java-me-maven-plugin:read-project-properties
                    </initialize>
                    <process-resources>
                        org.apache.maven.plugins:maven-resources-plugin:resources
                    </process-resources>
                    <compile>
                        com.cumulocity.me:java-me-maven-plugin:compile
                    </compile>
                    <process-test-resources>
                        org.apache.maven.plugins:maven-resources-plugin:testResources
                    </process-test-resources>
                    <test-compile>
                        com.cumulocity.me:java-me-maven-plugin:testCompile
                    </test-compile>
                    <test>
                        org.apache.maven.plugins:maven-surefire-plugin:test
                    </test>
                    <package>
                        com.cumulocity.me:java-me-maven-plugin:unpack-dependencies,
                        com.cumulocity.me:java-me-maven-plugin:create-jad,
                        com.cumulocity.me:java-me-maven-plugin:copy-resources,
                        com.cumulocity.me:java-me-maven-plugin:package,
                        com.cumulocity.me:java-me-maven-plugin:update-jad,
                        com.cumulocity.me:java-me-maven-plugin:attach-jad
                    </package>
                    <install>
                        com.cumulocity.me:java-me-maven-plugin:install,
                        com.cumulocity.me:java-me-maven-plugin:install-file
                    </install>
                    <deploy>
                        org.apache.maven.plugins:maven-deploy-plugin:deploy
                    </deploy>
                </phases>
            </configuration>
        </component>
    </components>

    <components>
        <component>
            <role-hint>micro-edition-library</role-hint>
            <role>org.apache.maven.lifecycle.mapping.LifecycleMapping</role>
            <implementation>org.apache.maven.lifecycle.mapping.DefaultLifecycleMapping</implementation>
            <configuration>
                <id>micro-edition-library</id>
                <phases>
                    <compile>
                        com.cumulocity.me:java-me-maven-plugin:compile
                    </compile>
                    <process-resources>
                        org.apache.maven.plugins:maven-resources-plugin:resources
                    </process-resources>
                    <process-test-resources>
                        org.apache.maven.plugins:maven-resources-plugin:testResources
                    </process-test-resources>
                    <test-compile>
                        com.cumulocity.me:java-me-maven-plugin:testCompile
                    </test-compile>
                    <test>
                        org.apache.maven.plugins:java-maven-surefire-plugin:test
                    </test>
                    <install>
                        org.apache.maven.plugins:maven-install-plugin:install
                    </install>
                    <deploy>
                        org.apache.maven.plugins:maven-deploy-plugin:deploy
                    </deploy>
                </phases>
            </configuration>
        </component>
    </components>
</component-set>
